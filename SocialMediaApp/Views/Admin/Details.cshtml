@model SocialMediaApp.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">User Details</h4>
                </div>
                <div class="card-body">

                    <!-- صورة المستخدم -->
                    @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.ProfilePhoto" class="img-thumbnail rounded-circle shadow-sm" style="max-width: 200px;" alt="Profile Photo" />
                        </div>
                    }

                    <!-- بيانات المستخدم -->
                    <dl class="row">
                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Password</dt>
                        <dd class="col-sm-8">@Model.Password</dd>

                        <dt class="col-sm-4">Birth Date</dt>
                        <dd class="col-sm-8">@Model.BirthDate?.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Role</dt>
                        <dd class="col-sm-8">@Model.Role</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
