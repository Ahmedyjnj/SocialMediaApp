@model SocialMediaApp.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Are you sure you want to delete this user?</h4>
                </div>
                <div class="card-body">

                    @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.ProfilePhoto" class="img-thumbnail rounded-circle" style="max-width: 200px;" />
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Password</dt>
                        <dd class="col-sm-8">@Model.Password</dd>

                        <dt class="col-sm-4">Birth Date</dt>
                        <dd class="col-sm-8">@Model.BirthDate?.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Role</dt>
                        <dd class="col-sm-8">@Model.Role</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="UserId" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
