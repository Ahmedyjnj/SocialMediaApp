@model SocialMediaApp.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Post</h4>
                </div>
                <div class="card-body">
                    <h5>Are you sure you want to delete this post?</h5>

                    <dl class="row mt-3">
                        <dt class="col-sm-4">Content</dt>
                        <dd class="col-sm-8">@Model.Content</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="PostId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
