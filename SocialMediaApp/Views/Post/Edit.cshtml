@model SocialMediaApp.Models.Post

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Post</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PostId" />

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Upload Image</label>
                            <input type="file" name="imageFile" class="form-control" />
                        </div>

                        @* Show current image if exists *@
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="mb-3 text-center">
                                <img src="@Model.ImagePath" class="img-thumbnail" style="max-width: 300px;" />
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="CreatedAt" class="form-label">Created At</label>
                            <input asp-for="CreatedAt" class="form-control" readonly />
                        </div>



                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-link">Back to Posts</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
